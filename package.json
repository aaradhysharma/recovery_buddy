{
  "name": "ergowellness",
  "version": "0.0.3",
  "description": "Digital health coach for ergonomics and wellness - preventing shoulder pain and poor posture",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "preview": "vite preview",
    "version:bump": "node scripts/bump-version.js",
    "format": "prettier --write \"src/**/*.{js,jsx,css}\"",
    "lint": "prettier --check \"src/**/*.{js,jsx,css}\"",
    "audit:security": "npm audit --audit-level=moderate",
    "clean": "rm -rf dist dist-electron node_modules/.vite"
  },
  "keywords": [
    "ergonomics",
    "wellness",
    "health",
    "posture",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@tensorflow-models/pose-detection": "^2.1.3",
    "@tensorflow/tfjs": "^4.22.0",
    "chart.js": "^4.4.0",
    "date-fns": "^2.30.0",
    "electron-store": "^8.1.0",
    "framer-motion": "^10.16.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.3.6",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.ergowellness.app",
    "productName": "ErgoWellness",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "dist/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
