{
  "name": "ergowellness-monorepo",
  "version": "0.0.9",
  "description": "ErgoWellness - Desktop and Web App Monorepo",
  "private": true,
  "workspaces": [
    "desktop",
    "web",
    "shared"
  ],
  "scripts": {
    "dev:desktop": "npm run dev --workspace=desktop",
    "dev:web": "npm run dev --workspace=web",
    "build:desktop": "npm run build --workspace=desktop",
    "build:web": "npm run build --workspace=web",
    "build:all": "npm run build --workspaces",
    "electron:dev": "npm run electron:dev --workspace=desktop",
    "electron:build": "npm run electron:build --workspace=desktop",
    "install:all": "npm install --workspaces",
    "clean": "rm -rf desktop/node_modules web/node_modules shared/node_modules node_modules desktop/dist web/dist dist-electron"
  },
  "keywords": ["ergonomics", "wellness", "health", "posture", "monorepo"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^3.6.2"
  }
}
